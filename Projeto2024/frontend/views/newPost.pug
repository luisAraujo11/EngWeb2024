doctype html
html
  head
    title= titulo
    meta(charset='utf-8')
    link(rel='stylesheet', href='/stylesheets/custom.css')

  body
    div.title_div
      h1.title_div= titulo
        
    form.search_form(method="POST")
        fieldset
            legend Metadata
            div.newpost_div
            input.search_input(type="hidden" name="_id" value=postID readonly) 
            div.newpost_div
            input.search_input(type="hidden" name="UserId")
            div.newpost_div
            label Inquirição Id 
            input.search_input(type="text" name="InqId")
            div.newpost_div
            label Título 
            input.search_input(type="text" name="PostTitle")
            div.newpost_div
            label Conteúdo 
            input.search_input(type="text" name="PostText" placeholder="Write something about it!")
        div.post_button_div
          button.button(type="submit") Post 
  div.return_div
    a.return_button(href="/home") Return to Main Page

