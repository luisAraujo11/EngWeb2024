extends layout

block content
  .w3-card-4 
    header.w3-container.w3-green
      h1= titulo 
    .w3-container
      form.w3-container(method="POST")
          fieldset
            legend Metadata
            label Nome
            input.w3-input.w3-round(type="text" name="id" readonly value=periodo.id)
            label Descrição
            input.w3-input.w3-round(type="text" name="desc" value=periodo.desc)

            each compositor in periodo.list
                input(type='hidden', name='list', value=compositor)
 
          button.w3-btn.w3-purple.w3-mb-2(type="submit") Register
      
    footer.w3-container.w3-green
      address Gerado por a96351::EngWeb2024 em #{data}

