extends layout

block content
  .w3-card-4 
    header.w3-container.w3-green
      h1= titulo 
      a.w3-btn.w3-round.w3-purple(href="/registo") Register
    .w3-container
      table.w3-table-all.w3-striped  
        thead
          tr
            th Id 
            th Nome
            th Actions
        tbody
          each p in lista
            tr 
              td
                a(href="/" + p._id) #{p._id}
              td= p.nome 
              td
                a.w3-button.w3-blue(href="/edit/" + p._id) Edit 
                a.w3-button.w3-red(href="/delete/" + p._id) Delete
    footer.w3-container.w3-green
      address Gerado por a96351::EngWeb2024 em #{data}
